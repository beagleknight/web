doctype html
html(ng-app="beagleknightApp")
  head
    title beagleknight
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    link(rel="stylesheet" href="css/index.css")
  body
    section#header
      header
        span.image.avatar
          img(src="images/avatar.png" alt="")
        h1#logo
          a(href="#") David Morcillo
      block nav
      footer
        ul.icons
          li
            a.icon.fa-twitter(href="https://twitter.com/beagleknight" target="_blank")
              span.label Twitter
          li
            a.icon.fa-github(href="https://github.com/beagleknight" target="_blank")
              span.label Github
          li
            a.icon.fa-linkedin(href="https://es.linkedin.com/in/davidmorcillo" target="_blank")
              span.label Linkedin
          li
            a.icon.fa-envelope(href="mailto:beagleknight@gmail.com" target="_blank")
              span.label Mail
    #wrapper
      #main
        block content
    script(src="js/libs.js")
    script(src="js/index.js")
